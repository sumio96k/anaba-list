<%= form_with url: search_path, method: :get do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.text_field :content, placeholder: 'Keyword or #...', class: "form-control rounded rounded-pill" %>
    </div>
    <%= f.hidden_field :model, :value => 'Post' %>
    <div class="col-md-2">
      <%= f.submit '検索', class: "btn btn-primary rounded-pill" %>
  </div>
<% end %>