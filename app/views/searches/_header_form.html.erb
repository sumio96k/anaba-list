<%= form_with url: search_path, method: :get, class: "d-flex mt-1" do |f| %>
  <%= f.text_field :content, placeholder: 'Keyword or #...', class: "form-control rounded rounded-pill mr-1" %>
  <%= f.hidden_field :model, :value => 'Post' %>
  <%= f.submit '検索', class: "btn btn-primary rounded-pill" %>
<% end %>