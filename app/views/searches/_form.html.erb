<%= form_with url: search_path, method: :get do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.text_field :content, placeholder: 'Search like #...', class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.select :model, [['投稿','Post'],['ユーザー','User']], include_blank: "---", class: "select" %>
    </div>
    <div class="col-md-2">
      <%= f.submit '検索', class: "btn btn-primary" %>
  </div>
<% end %>