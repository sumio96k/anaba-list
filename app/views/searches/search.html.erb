<div class="container">

  <% if @posts.nil? != true %>
    <div class="row">
      <h3>『<%= @content %>』の投稿を含む検索結果</h3>
    </div>
    <div class="row">
      <%= render 'posts/index', posts: @posts %>
    </div>
  <% elsif @users.nil? != true %>
    <div class="row">
      <h3>『<%= @content %>』のユーザーを含む検索結果</h3>
    </div>
    <div class="row">
      <%= render 'users/index', users: @users %>
    </div>
  <% end %>

</div>