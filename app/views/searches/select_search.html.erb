<% if @posts.nil? != true %>
  <div class="row justify-content-center mt-3">
    <div class="col-11">
      <h3>『<%= @result %>』の検索結果</h3>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <%= render 'posts/index', posts: @posts %>
  </div>
<% elsif @users.nil? != true %>
  <div class="row justify-content-center mt-3">
    <div class="col-11">
      <h3>『』のユーザーを含む検索結果</h3>
    </div>
  </div>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mt-3">
    <%= render 'users/index', users: @users %>
  </div>
<% end %>

