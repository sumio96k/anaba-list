<h1>ユーザー詳細画面</h1>
<div class="container">
  <div class="row justify-content-around">
    <div class="col-3 border rounded">
      <%= image_tag @user.get_profile_image(300,300) %>
    </div>
    <div class="col-5 border rounded">
      <%= @user.introduction %>
    </div>
    <% if user_signed_in? %>
      <% if @user == current_user || current_user.admin == true %>
      <div class="col-2">
        <div class="mb-3">
        <%= link_to '編集する', edit_user_path, class: 'btn btn-outline-info' %>
        </div>
        <div>
        <%= link_to '新規投稿', new_post_path, class: 'btn btn-outline-primary' %>
        </div>
      </div>
      <% end %>
    <% end %>

  </div>
  <div class="row mt-3">
    <% @posts.each do |post| %>
    <div class ="mx-3">
      <div>
        <%= image_tag post.get_image(200,200) %><br>
        #<%= @prefectures.find_by(id: post.area.prefecture_id).name %><br>
        #<%= post.area.name %><br>
        #<%= post.category.name %>
      </div>
    </div>
    <% end %>
  </div>
</div>
