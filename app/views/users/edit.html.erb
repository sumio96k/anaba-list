<h1>ユーザー編集画面</h1>
<div class="containe">

    <%= form_with model: @user, url: user_path, method: :patch do |f| %>

    <diV class="row">
      <div class="col">
        <%= f.label :profile_image do %>
          <%= image_tag @user.get_profile_image(200,200) %>
          <%= f.file_field :profile_image, style: "display: none;" %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-4">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
    </div>

    <div class="row">
      <div class="col-8">
        <%= f.label :introduction, "紹介文" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <%= f.submit '保存する', class: "btn btn-outline-success" %>
      </div>
    </diV>
  </div>

    <% end %>

  <div class="row">
    <div class="col">
      <%= link_to '退会する', unsubscribe_users_path, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>