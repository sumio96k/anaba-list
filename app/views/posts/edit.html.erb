<h1>投稿編集画面</h1>
<div class="container">
  <div class-"row">
    <div class="col">
      <%= image_tag @post.get_image(400,400) %>
    </div>
    <div class="col">
      <%= form_with model: @post, url: post_path, method: :patch do |f| %>
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
        <%= f.label :title, "説明" %>
        <%= f.text_area :body, class: "form-control" %>
        <%= f.submit "保存する", class: "btn btn-outline-success" %>
      <% end %>
    </div>
    <div class="col">
      <%= link_to '削除する', post_path, method: :destroy, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>