<h1>投稿詳細ページ</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag @post.get_image(400,400) %>
    </div>
    <div class="col">
      <div class="row">
        <%= @post.title %>
      </div>
      <div class="row">
        <%= @post.body %>
      </div>
    </div>
    <% if @post.user == current_user || current_user.admin? %>
    <div class="col-2">
      <%= link_to '編集画面へ', edit_post_path, class: "btn btn-outline-info" %>
    </div>
    <% end %>
  </div>
  <div class="row">
    <% @post_comments.each do |post_comment| %>
      <%= post_comment.comment %>
    <% end %>
  </div>
</div>