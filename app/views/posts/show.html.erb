<!--投稿詳細ページ-->
<div class="container">
  <div class="row mb-3">
    <div class="col-2">
    <%= link_to user_path(@post.user.id) do %>
      <%= image_tag @post.user.get_profile_image(100,100) %>
    <% end %>
    </div>
    <div class="col">
      <%= @post.user.name %>
    </div>
  </div>
  <!--投稿詳細-->
  <div class="row">
    <div class="col-8">
      <div>
        <%= image_tag @post.get_image(600,600) %>
      </div>
      <div>
        <%= @post.title %>
      </div>
      <div>
        都道府県: <%= @prefecture.name %>
        エリア: <%= @post.area.name %>
        カテゴリー：<%= @post.category.name %>
      </div>
      <div>
        <%= @post.body %>
        <% @post_tag.each do |tag| %>
        #<%= tag.name %>
        <% end %>
      </div>

      <% if user_signed_in? %>
        <%= render 'favorites/btn', post: @post %>
      <% else %>
        <%= link_to new_user_session_path do %>
          <i class="far fa-heart fa-2x" style="color: red;"></i>
          <span><%= @post.favorites.count %> いいね</span>
        <% end %>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <% if @post.user == current_user || current_user.admin == true %>
        <%= link_to '編集画面へ', edit_post_path, class: "btn btn-outline-info" %>
      <% end %>
    <% end %>
  <!--コメント一覧-->
  <div class="col-3">
    <%= render 'post_comments/index', post_comments: @post_comments, post: @post %>
  </div>
</div>

<!--コメント投稿-->
<% if user_signed_in? %>
  <div class="row mt-3">
    <div class="col">
      <%= render 'post_comments/form', post: @post, post_comment: @post_comment %>
    </div>
  </div>
<% end %>

</div>